{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
//    "isolatedModules": true,
    "skipLibCheck": true,
    "pretty": true,
    "moduleResolution": "node",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": "./",

  },

  "include": [
    "src/**/*",
    "./types/**/*.d.ts"

  ],
  "exclude": ["node_modules", "dist"]
}